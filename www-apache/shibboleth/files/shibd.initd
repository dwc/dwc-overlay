#!/sbin/runscript

depend() {
	before apache2
	use net
}

start() {
	ebegin "Starting shibd"
	start-stop-daemon --start \
		--pidfile /var/run/shibboleth/shibd.pid \
		--exec /usr/sbin/shibd \
		-- -p /var/run/shibboleth/shibd.pid ${SHIBD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping shibd"
	start-stop-daemon --stop \
		--pidfile /var/run/shibboleth/shibd.pid \
		--exec /usr/sbin/shibd
	eend $?
}
